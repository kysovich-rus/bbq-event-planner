<div class="text-center buffer-top">
  <%= image_tag user_avatar(@user), class: "rounded-circle img-thumbnail" %>
  <h1 class="display-5"><%= @user.name %></h1>

  <% if @user == current_user %>
    <p class="mt-4">
      <%= link_to I18n.t('buttons.user.edit'), edit_user_path(@user),
                  class: 'btn btn-outline-dark' %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= I18n.t('titles.user.events') %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= I18n.t('messages.user.no_events') %></p>
      <% end %>
    </div>
  </div>
</div>
