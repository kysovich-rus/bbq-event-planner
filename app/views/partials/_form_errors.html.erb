<% errors = model.errors %>

<% if errors.any? %>
  <div class="alert alert-danger">
    <div class="lead buffer-bottom">
      В вашей форме обнаружено <%= errors.count %> ошибок
    </div>

    <ul>
      <% errors.each do |e| %>
        <li><%= e.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>