<h2 class="display-4">Смена пароля</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :password, "Новый пароль" %> <i>(пустое поле не изменит пароль)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",
                         class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em>Мин. длина - <%= @minimum_password_length %> символов</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Повторите новый пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                         class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Текущий пароль" %> <i>(для подтверждения)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions buffer-both">
    <%= f.submit "Изменить", class: "btn btn-dark" %>
    или <%= link_to "оставить, как есть", edit_user_path(@user) %>
  </div>
<% end %>

<div class="alert-warning">
  <h3>Обратите внимание</h3>

  <p>Здесь вы можете полностью удалить себя из системы</p>
  <%= button_to "Удалить профиль", registration_path(resource_name),
                form: { data: { confirm: "Уверены? Изменить это будет нельзя?" } },
                method: :delete,
                class: "btn btn-outline-danger" %>
</div>



