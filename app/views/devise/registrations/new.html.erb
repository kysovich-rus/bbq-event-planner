<h2 class="display-4">Регистрация пользователя</h2>
<div class="col-md-9">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

     <div class="field">
       <%= f.label :email, "E-mail" %>
       <%= f.email_field :email, autofocus: true, autocomplete: "email",
                         class: "form-control" %>
     </div>

     <div class="field">
       <%= f.label :name, "Ваше имя на сайте" %>
       <em>(можно задать позднее)</em>
       <%= f.text_field :name, autocomplete: :off, value: "", class: "form-control" %>
     </div>

     <div class="field">
       <%= f.label :password, "Пароль" %>
       <% if @minimum_password_length %>
         <em>(Минимальная длина - <%= @minimum_password_length %> символов)</em>
       <% end %>
       <%= f.password_field :password, autocomplete: "new-password",
                            class: "form-control" %>
     </div>

     <div class="field">
       <%= f.label :password_confirmation, "Повторите пароль" %>
       <%= f.password_field :password_confirmation, autocomplete: "new-password",
                            class: "form-control" %>
     </div>

     <div class="actions buffer-both">
       <%= f.submit "Отправить", class: "btn btn-dark" %>
     </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

