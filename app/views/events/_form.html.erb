<%= form_for @event, data: {turbo: false} do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event}, data: {turbo: false} %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :pincode %>
    <%= f.text_field :pincode, class: 'form-control' %>
  </div>

  <div class="actions mt-2">
    <%= f.submit t('buttons.save'), class: 'btn btn-primary' %>
    или <%= link_to t('buttons.cancel'), @event %>
  </div>
<% end %>
